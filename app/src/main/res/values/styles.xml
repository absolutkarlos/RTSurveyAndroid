<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/White</item>
        <item name="android:textColorHint">@color/WhiteHint</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="textview_custom" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="edittext_custom" parent="android:Widget.EditText">
        <item name="android:backgroundTint"
            tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/WhiteHint</item>
    </style>




</resources>
